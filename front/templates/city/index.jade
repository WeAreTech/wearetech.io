extends layout/city

block content

  div.frontpage
    div#hello.rowbar-one
        div.container
          div.row
            div.col-lg-8.col-lg-offset-2.centered
              h1= city.headerTitle
              h2 #{ city.name.toUpperCase() } DEVELOPERS & TECHIES
              p This is&nbsp;
                a(href="https://github.com/skgtech/skgtech.github.io") an open website
                | &nbsp; about the community of #{ city.name }'s developers and techies. Meet the community and find out about upcoming events and meetups.
          div.row
            div.col-lg-8.col-lg-offset-4.centered.share
              ul.nav
                li
                  a(href="https://twitter.com/share", data-url="#{ city.hostname }", data-text="#{ city.name } Upcoming Events and Meetups", data-size="medium", via="#{ city.twitter }" related="#{ city.twitter }").twitter-share-button Tweet
                li
                  a(href="https://twitter.com/#{ city.twitter }", data-show-count="false", data-lang="en").twitter-follow-button Follow @#{ city.twitter }
                li
                  div(data-action="share", data-annotation="bubble", data-href="#{ city.hostname }").g-plus
                li
                  div(data-href="https://www.facebook.com/#{ city.facebook }", data-layout="button_count", data-action="like", data-show-faces="false", data-share="false", data-width="200").fb-like

    div#fb-root

    div#agenda.rowbar-two
      div.container
        div.row
          div.col-lg-10
            h3 #{ city.name.toUpperCase() } MEETUP AGENDA
        div.row
          div#calendar-link.col-lg-10
            a(target="_blank", href="https://www.google.com/calendar/embed?src=#{ city.calendarUrl }&ctz=Europe/Athens") Powered by Google Calendar
            |  |&nbsp;
            a(target="_blank", href="https://www.google.com/calendar/feeds/#{ city.calendarUrl }/public/basic") RSS
            |  |&nbsp;
            a(target="_blank", href="https://www.google.com/calendar/ical/#{ city.calendarUrl }/public/basic.ics") iCal
            |  |&nbsp;
            a(href="/submit-event/") How to submit an event

        div#agenda-items
          div.row
            div.col-lg-10
              img(src="/img/loader-bar.gif")
    div#agenda-tpl.hide
      div.col-lg-5
        div.panel.panel-danger
          div.panel-heading
            h3.panel-title
          div.panel-body
            ul
              li.agenda-tpl-when
                b When
                | :
                span
              li.agenda-tpl-venue
                b Venue
                | :
                span
              li.agenda-tpl-address
                b Address
                | :
                span
              li.agenda-tpl-info
                b More Info
                | :
                a(href="", target="_blank")
              li.agenda-tpl-language
                b Language
                | :
                span
              li.agenda-tpl-about
                b About
                | :
                span
            div.cal-btns
              a(title="Add the event to your Google Calendar", href="", target="_blank", rel="nofollow").glyphicon.glyphicon-plus.addcal
              a(title="View the event at Google Calendar", href="", target="_blank", rel="nofollow").glyphicon.glyphicon-share-alt.viewcal

    div#agenda-error.hide
      div.row
        div.col-lg-6
          div.alert.alert-danger Oh Snap! Something went horribly wrong :( Please refresh!

    div#communities.rowbar-one
      div.container
        div.row
          div.col-lg-10
            h3 #{ city.name.toUpperCase() } TECH COMMUNITIES

          - var i = -2
          while i <= communities.length
            - i += 2
            div.row
              each community in communities.slice(i, i + 2)
                div.col-lg-5
                  div.panel.panel-info
                    div.panel-heading
                      h3.panel-title= community.name
                    div.panel-body
                      ul
                        li
                          b Period
                          | : #{ community.period }
                        if community.happensAt
                          li
                            b Happens On
                            | : #{ community.happensAt }
                        li
                          b Website
                          | :
                          a(href="#{ community.website }", target="_blank") #{ community.website }
                        li
                          b Description
                          | : #{ community.description }
                        li
                          b Maintainers
                          | :
                          ul.maintainers
                            each maintainer in community.maintainers
                              li
                                if maintainer.email
                                  a(href="mailto:#{ maintainer.email }") #{ maintainer.name }
                                else if maintainer.website
                                  a(href="#{ maintainer.website }") #{ maintainer.name }
                                else
                                  | #{ maintainer.name }
    div#contact.rowbar-two
      div.container
        div.row
          div.col-lg-10
            h3 STAY IN TOUCH
            p
              a(type="button", target="_blank", href="#{ city.forumUrl }").btn.btn-default.btn-lg
                span.glyphicon.glyphicon-globe
                | Signup on the mailing list
            p
              a(type="button", href="/submit-event/").btn.btn-default.btn-lg
                span.glyphicon.glyphicon-wrench
                | Submit an Event
            p.social
              a(href="https://facebook.com/#{ city.facebook }")
                i.fa.fa-facebook
            p.social
              a(href="https://twitter.com/#{ city.twitter }")
                i.fa.fa-twitter

