extends layout/city

block content

  div.city-header
    div.row
      div.col-lg-12
        div.jumbotron.text-center
          div.navbar.navbar-transparent
            div.container
              div.navbar-header
                button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target=".navbar-collapse")
                  span.sr-only(Toggle navigation)
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              div.navbar-collapse.collapse
                ul.nav.navbar-nav
                  li.active
                    a(href="#calendar") Calendar
                  li
                    a(href="#communities") Communities
                  li
                    a(href="#contact") Contact
          div.container
            div.row
              div.col-lg-6.col-lg-offset-3
                div.logo-wrapper
                  img(src="assets/wearetech-logo.png")
                div.city-name
                  h2 THESSALONIKI
                div.city-description
                  h3 This is an open website about the community of Thessaloniki's developers and techies. Meet the community and find out about upcoming events and meetups.
                div.social-share
                  ul.nav
                    li(style="margin-top:-7px;")
                      div(data-href="http://#{ city.hostname }", data-layout="button_count", data-action="like", data-show-faces="false", data-share="false", data-width="200").fb-like
                    li
                      a(href="https://twitter.com/share", data-url="http://#{ city.hostname }", data-text="#{ city.name }", data-size="medium", via="#{ city.twitter }" related="#{ city.twitter }").twitter-share-button Tweet
                    li
                      div(data-action="share", data-annotation="bubble", data-href="http://#{ city.hostname }").g-plus

  div.city-events
    div.container
      div.row
        div.col-lg-8.calendar-title
          h2 Calendar of upcoming events
          p.subtle-note view on Google Calendar, RSS, iCal
        div.col-lg-4
          h2.submit-event
            img(src="/img/submit-event.png")
            | &nbsp;How to submit an event
    div#agenda-items.container.calendar-items-block
      div.row
        div.col-lg-10.col-md-10
          img(src="/img/loader-bar.gif")


    div#agenda-tpl.hide
      div.col-md-4.col-lg-4.calendar-item-outer
        div.calendar-item-inner
          div.calendar-item-title
            h3.date
              time(datetime="").agenda-tpl-when
                span.day
                br
                span.month
            h3.event-title
          div.calendar-item-content
            h4
              span.tpl-full-time
              span.tpl-venue-copy
            p.tpl-about
          div.calendar-item-footer
            a(href="https://twitter.com/search?f=realtime&q=%23wearetogether&src=typd", target="_blank").hashtag #wearetogether
            div.social-icons
            div.google-calendar-icons


  div.city-communities
    div.container
      div.row
        div.col-lg-12
          h2.communities-title Communities of the city
    div.container
      div.row
        div.col-lg-10.communities-block
      - var i = -2
      while i <= communities.length
        - i += 2
        each community in communities.slice(i, i + 2)
          div.container.community
            div.row
              div.col-lg-3
                div.community-img
                  div.community-gradient
                    h3.community-title #{ community.name }
              div.col-lg-7
                div.community-details
                  h4.community-meetup-frequency #{ community.period }
                  h5.community-details-subtitle What we do
                  p.community-details-subcontent #{ community.description }
                  h5.community-details-subtitle Our maintainers
                  p.community-details-subcontent
                    ul.community-maintainers
                      each maintainer in community.maintainers
                        li
                          if maintainer.email
                            a(href="mailto:#{ maintainer.email }") #{ maintainer.name }
                          else if maintainer.website
                            a(href="#{ maintainer.website }") #{ maintainer.name }
                          else
                            | #{ maintainer.name }
                  h5.community-details-subtitle Learn more about us
                  p.community-details-subcontent
                    a(href="#{ community.website }", target="_blank") #{ community.website }
          hr
